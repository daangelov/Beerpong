{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="container">
        <div class="jumbotron bg-transparent">
            <h1 class="d-none d-md-block">
                Please wait...
                <i class="d-none d-md-inline-block fas fa-spinner fa-spin"></i>
            </h1>
            <h2 class="d-md-none text-center">
                Please wait...
            </h2>
            <p class="text-center text-md-left">
                The game will start automatically when your turn comes!
            </p>
            <div class="display-4 text-center d-md-none">
                <i class="fas fa-spinner fa-spin"></i>
            </div>

            <hr class="my-4">

            <table class="table table-responsive table-bordered table-hover bg-white">
                <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th class="w-100">Username</th>
                    <th class="text-center">Status</th>
                </tr>
                </thead>

                <tbody>
                {% for user in users %}
                    <tr class="{{ user.bgColor }}">
                        <td class="text-center">{{ loop.index }} </td>
                        <td class="w-100">{{ user.username }}</td>
                        <td class="text-center"><span class="badge badge-pill {{ user.badgeColor }}">{{ user.status }}</span></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-3 text-center">
                <form action="{{ path_for('logout') }}" method="post">
                    <button class="btn btn-danger">Exit</button>
                </form>
            </div>
        </div>


    </div>
{% endblock %}
