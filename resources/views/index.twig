{% extends 'layouts/app.twig' %}

{% block content %}
    <div class="container">
        <div class="jumbotron bg-transparent">
            <h1>How about some Beer Pong with a robot?</h1>
            <p class="lead">Pick up an username and start playing!</p>
            <hr class="my-4">

            <form method="post" action="{{ path_for('login') }}">
                <div class="row">
                    <div class="col-md-6 align-self-center">
                        <div class="row">
                            <div class="col-12">
                                <label class="sr-only" for="username">Username</label>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Username...">
                            </div>
                            {% if flash.getMessage('error') %}
                                <div class="col-12">
                                    <small class="text-danger font-weight-bold">
                                        {{ flash.getMessage('error') | first }}
                                    </small>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-6 mt-3">
                        <div style="height:100px;width:100px;" class="m-auto">
                            <button type="submit" class="btn btn-lg rounded-circle btn-danger h-100 w-100 text-uppercase">Play</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
